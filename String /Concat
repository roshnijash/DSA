// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

int main() {
    // Write C++ code here
    
    string s="hello";
    string t="worldsss";
    string v =s;
// concatenation

cout<<v<<" "<<t<<"\n";

// or with append fn
string st=v.append(t);
cout<<st<<"\n";

//Length 
int lengths=s.size();
cout<<lengths<<"\n";


// Access String elements

cout<<s[0]<<"\n";

s[1]='5';

cout<<s[1]<<"\n";
cout<<s<<"\n";


//    ..............  \'', \"", \\ insert special chars



string fullname;
// cin>>fullname;
// cout<<fullname<<endl;
//only print the 1st word so we have to insert getline()
getline(cin,fullname);
cout<<fullname;


    return 0;
}
